{{#if addNewRecipe}}
<h1>New Recipe</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="ingredients">Ingredients</label>
        {{input value=ingredients id="ingredients"}}
      </div>

      <div class="form-group">
        <label for="instructions">Instructions</label>
        {{input value=instructions id="instructions"}}
      </div>

      <div class="form-group">
        <label for="image">Upload Image(URL)</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveRecipe'}}>Submit</button>
    </form>
  </div>
{{else}}
  <button {{action 'recipeFormShow'}}>Add Recipe</button>
{{/if}}
