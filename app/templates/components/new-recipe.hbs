{{#if addNewRecipe}}
<div id="recipeForm">
  <form id="formRecipe">
    <div class="form-group">
      <label for="foodName">Food Name</label>
      {{input value=foodName id="foodName"}}
    </div>

    <div class="form-group">
      <label for="ingredients">Ingredients</label>
      {{input value=ingredients id="ingredients"}}
    </div>

    <div class="form-group" id="in">
      <label for="instructions">Instructions</label>
      {{input value=instructions id="instructions"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'saveRecipe1'}} id="save" class="btn">Save</button>
  </form>
</div>
  <p></p>
  {{else}}
    <button class="btn" id="recipe" {{action 'recipeFormShow'}}>Add Recipe</button>
  {{/if}}
